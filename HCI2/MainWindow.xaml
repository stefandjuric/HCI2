                                Background="#CC119EDA"  BorderBrush="{x:Null}">
                            <Button.ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="5" TextWrapping="Wrap" MaxWidth="100">
                                        This button is for adding new software.
                                    </TextBlock>
                                </StackPanel>
                            </Button.ToolTip>
                        </Button>

                        <Button Click="SoftwareRemoveBtn_Click"
                                Content="Remove" FontSize="10"
                                Width="100" MaxHeight="50" Margin="5" 
                                Background="#CCDA1111" BorderBrush="{x:Null}">
                            <Button.ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="5" TextWrapping="Wrap" MaxWidth="100">
                                        This button is for removing selected software.
                                    </TextBlock>
                                </StackPanel>
                            </Button.ToolTip>
                        </Button>

                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Name="HelpTab" Header="Help">
                <Grid Margin="20,20,20,20">
                    <StackPanel VerticalAlignment="Center">
                        <Button x:Name="helpButton" Content="Help" 
                                Width="250" FontSize="15" Margin="20"
                                Click="helpButton_Click"/>
                        <Button x:Name="tutorialButton" Content="Tutorial" 
                                Width="250" FontSize="15" Margin="20"
                                Click="tutorialButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Controls:MetroWindow>
