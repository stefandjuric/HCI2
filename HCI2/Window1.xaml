<Window x:Class="HCI2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI2"
        mc:Ignorable="d"
        Title="Confirmation" Height="207" Width="300" WindowStartupLocation="CenterScreen" Cursor="Arrow">
    <Grid Margin="0,0,0,-21">
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="129,37,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBox_SelectionChanged"/>
        <Label x:Name="label" Content="Start time" HorizontalAlignment="Left" Margin="33,37,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.158,0.231"/>
        <Label x:Name="label1" Content="End time" HorizontalAlignment="Left" Margin="37,82,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="" HorizontalAlignment="Left" Margin="129,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Confirm" HorizontalAlignment="Left" Margin="48,133,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" BorderBrush="{x:Null}" Background="#CC119EDA"/>
        <Button x:Name="button1" Content="Exit" HorizontalAlignment="Left" Margin="162,133,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click" BorderBrush="{x:Null}" Background="#CCDA1111"/>

    </Grid>
</Window>
